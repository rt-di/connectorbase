<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    >
	<VBox justifyContent="SpaceBetween" width="200px" height="150px" backgroundDesign="Solid" class="sapUiSmallMargin" tooltip="{$this>tooltip}" >
		<VBox class="sapUiSmallMargin">
			<core:Icon src="{$this>icon}" visible="{=!!${$this>icon}}" size="2.625rem" color="Default" class="sapUiTinyMarginBottom"/>
			<Image src="{$this>image}" visible="{=!!${$this>image}}" class="sapUiTinyMarginBottom fragmentimage"/>
			<Link text="{$this>name}" href="{$this>href}" wrapping="true" target="{$this>target}" class="sapUiTinyMarginTop" />
			<Text text="{$this>description}" wrapping="true"/>
		</VBox>
	</VBox>

</core:FragmentDefinition>

